{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
        "declaration": false,
        // Enhance Strictness
        "strict": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "strictBindCallApply": false,
        "outDir": "lib/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.*"
    ]
}
